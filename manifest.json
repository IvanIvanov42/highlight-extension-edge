{
  "manifest_version": 3,
  "name": "HighlightKit",
  "version": "1.0.0",
  "description": "Highlight specific text on any webpage in real-time. Perfect for monitoring live feeds and tracking keywords.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "HighlightKit"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["highlight.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
