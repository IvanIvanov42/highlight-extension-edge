{
  "manifest_version": 3,
  "name": "String Highlighter",
  "version": "1.0",
  "description": "Highlight specific strings on any webpage",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "String Highlighter"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["highlight.css"]
    }
  ]
}
